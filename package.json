{
  "name": "@perryrh0dan/taskline",
  "productName": "Taskline",
  "version": "1.2.2",
  "description": "Tasks, boards & notes for the command-line habitat",
  "repository": "https://github.com/perryrh0dan/taskline",
  "license": "MIT",
  "author": {
    "name": "Thomas PÃ¶hlmann",
    "email": "thomaspoehlmann96@googlemail.com",
    "url": "https://github.com/perryrh0dan"
  },
  "bin": {
    "tl": "cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "i18n",
    "src",
    "cli.js"
  ],
  "keywords": [
    "task",
    "board",
    "note",
    "todo",
    "notebook",
    "command",
    "line",
    "console",
    "cli",
    "app"
  ],
  "configuration": {
    "default": {
      "language": "en",
      "tasklineDirectory": "~",
      "displayCompleteTasks": true,
      "displayProgressOverview": true,
      "storageModule": "local",
      "firestoreConfig": {
        "storageName": "storage",
        "archiveName": "archive",
        "type": "",
        "project_id": "",
        "private_key_id": "",
        "private_key": "",
        "client_email": "",
        "client_id": "",
        "auth_uri": "",
        "token_uri": "",
        "auth_provider_x509_cert_url": "",
        "client_x509_cert_url": ""
      },
      "dateformat": "dd.mm.yyyy HH:MM",
      "theme": {
        "colors": {
          "pale": "grey",
          "error": "red",
          "task": {
            "priority": {
              "medium": "yellow",
              "high": "red"
            }
          },
          "icons": {
            "note": "blue",
            "success": "green",
            "star": "yellow",
            "progress": "blue",
            "pending": "magenta",
            "canceled": "red"
          }
        }
      }
    }
  },
  "scripts": {
    "build": "gulp buildTest && gulp buildMeta",
    "build:prod": "bash scripts/build.sh",
    "build:prod:snapcraft": "gulp snapcraft",
    "start": "node dist/cli.js",
    "dev": "gulp dev",
    "test": "npm run lint && npm run unit",
    "lint": "eslint ./src/**/*.ts",
    "unit": "jest --runInBand",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@perryrh0dan/signale": "^1.4.4",
    "@types/is-ci": "^2.0.0",
    "@types/update-notifier": "^2.5.0",
    "chalk": "^2.4.1",
    "clipboardy": "^2.1.0",
    "commander": "^4.0.0",
    "date-fns": "^2.6.0",
    "figures": "^3.1.0",
    "firebase-admin": "^8.7.0",
    "gulp-json-editor": "^2.5.4",
    "is-ci": "^2.0.0",
    "ora": "^3.4.0",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.6.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/commit-analyzer": "^6.3.2",
    "@semantic-release/release-notes-generator": "^7.3.2",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "commitlint": "^8.2.0",
    "del": "^5.1.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "semantic-release": "^15.13.30",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "winston": "^3.2.1"
  },
  "jest": {
    "verbose": true
  }
}
